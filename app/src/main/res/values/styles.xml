<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorAccent">@color/secondaryColor</item>
    </style>

    <style name="SuperMaterialTheme" parent="AppTheme">

    </style>

    <!-- TextView da tela cadastro_atividade_layout -->
    <style name="TextView_cadastro_atividade_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Large</item>
        <item name="android:textAlignment">center</item>
    <!--   <item name="android:background">@color/primaryLightColor</item> -->
   </style>

   <!-- RadioGroup da tela cadastro_atividade_layout -->
    <style name="RadioGroup_cadastro_atividade_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_margin">16dp</item>
    </style>

    <!-- RadioGroup da tela cadastro_atividade_layout -->
    <style name="RadioButton_cadastro_atividade_layout">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>

    </style>

</resources>
